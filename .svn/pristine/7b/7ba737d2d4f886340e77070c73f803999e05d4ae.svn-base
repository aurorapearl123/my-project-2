<script>
$('#cmdSaveFamily').click(function(){
    if (check_fields('#modal3')) {
    	$(this).attr('disabled','disabled');
    	$(this).addClass('loader');
    	// submit
       	saveFamily();
    }
});

$('#cmdUpdateFamily').click(function(){
    if (check_fields('#modal4')) {
    	$(this).attr('disabled','disabled');
    	$(this).addClass('loader');
    	// submit
       	updateFamily();
    }
});

$('#cmdDeleteFamily').click(function(){
	$(this).attr('disabled','disabled');
	$(this).addClass('loader');
	// submit
   	deleteFamily();
});

function showFamilyMembers() {
    $.ajax({
        url: '<?php echo site_url('family_member/show')?>',
        data: { empID: '<?php echo $this->encrypter->encode($rec->empID)?>' },
        type: 'POST',
        dataType:'json',
        success:function(response) {
            if (response.status == '1') {
                
                list = '';
                for (i = 0; i < response.records.length; i++) {
                    record = response.records[i];
                    
					list += '<tr class="row-family" data-id="'+record.familyID+'">';
					list += '	<td><span>'+record.name+'</span></td>';
					list += '	<td><span>'+record.relationship+'</span></td>';
					list += '	<td><span>'+((record.birthDate != '00/00/0000') ? record.birthDate : '')+'</span></td>';
					list += '	<td><span>'+record.occupation+'</span></td>';
					list += '	<td class="text-center"><span>'+((record.isDependent == '1') ? '<span class="badge badge-pill badge-warning">Yes</span>' : '')+'</span></td>';
					list += '	<td class="text-center"><span>'+((record.isBeneficiary == '1') ? '<span class="badge badge-pill badge-warning">Yes</span>' : '')+'</span></td>';
					list += '	<td class="text-center"><span>'+((record.isContact == '1') ? '<span class="badge badge-pill badge-warning">Yes</span>' : '')+'</span></td>';
					list += '</tr>';
                }

                $('#family-members tbody').html(list);
            } else if (response.status == '0') {
                if (response.message) {
                    alert(response.message);
                }
            } else {
                alert(response.message, 1);
            }
        }, error:function(xhr) {
        }
    });
}

function viewFamily(familyID) {
    $.ajax({
        url: '<?php echo site_url('family_member/view')?>',
        data: { familyID: familyID },
        type: 'POST',
        dataType:'json',
        success:function(response) {
            if (response.status == '1') {
                record = response.record;
                
                $('#efamily-familyID').val(record.familyID);
                $('#efamily-name').val(record.name);
                $('#efamily-relationship').val(record.relationship);
                $('#efamily-birthDate').val(record.birthDate);
                $('#efamily-civilStatus').val(record.civilStatus).selectpicker('refresh');
                $('#efamily-occupation').val(record.occupation);
                $('#efamily-address').val(record.address);
                $('#efamily-remarks').val(record.remarks);
                $('#efamily-isDependent').val(record.isDependent).selectpicker('refresh');
                $('#efamily-isBeneficiary').val(record.isBeneficiary).selectpicker('refresh');
                $('#efamily-isContact').val(record.isContact).selectpicker('refresh');
            } else if (response.status == '0') {
                if (response.message) {
                    alert(response.message);
                }
            } else {
                alert(response.message, 1);
            }
        }, error:function(xhr) {
        }
    });
}

function saveFamily() {
    var formData = new FormData();
    var fields   = ['name', 'relationship', 'birthDate', 'civilStatus', 'occupation', 'address', 'isDependent', 'isBeneficiary', 'isContact', 'remarks'];

    for (i = 0; i < fields.length; i++) {
        formData.append(fields[i], $('#family-'+fields[i]).val());
    }

    formData.append('empID', '<?php echo $this->encrypter->encode($rec->empID)?>');

    $.ajax({
        url: '<?php echo site_url('family_member/save')?>',
        data: formData,
        type: 'POST',
        processData: false,
        contentType: false,
        dataType:'json',
        success:function(response) {
            if (response.status == '1') {
                showFamilyMembers();
                clearFields('#modal3');
                
                $('#modal3').modal('hide');
                $('#cmdSaveFamily').prop('disabled',false);
            	$('#cmdSaveFamily').removeClass('loader');
            } else if (response.status == '0') {
                if (response.message) {
                    alert(response.message);
                }
            } else {
                alert(response.message, 1);
            }
        }, error:function(xhr) {
        }
    });
}

function updateFamily() {
    var formData = new FormData();
    var fields   = ['name', 'relationship', 'birthDate', 'civilStatus', 'occupation', 'address', 'isDependent', 'isBeneficiary', 'isContact', 'remarks'];

    for (i = 0; i < fields.length; i++) {
        formData.append(fields[i], $('#efamily-'+fields[i]).val());
    }

    formData.append('familyID', $('#efamily-familyID').val());

    $.ajax({
        url: '<?php echo site_url('family_member/update')?>',
        data: formData,
        type: 'POST',
        processData: false,
        contentType: false,
        dataType:'json',
        success:function(response) {
            if (response.status == '1') {
                showFamilyMembers();
                clearFields('#modal4');
                
                $('#modal4').modal('hide');
                $('#cmdUpdateFamily').prop('disabled',false);
            	$('#cmdUpdateFamily').removeClass('loader');
            } else if (response.status == '0') {
                if (response.message) {
                    alert(response.message);
                }
            } else {
                alert(response.message, 1);
            }
        }, error:function(xhr) {
        }
    });
}

function deleteFamily() {
    $.ajax({
        url: '<?php echo site_url('family_member/delete')?>',
        data: { familyID: $('#efamily-familyID').val() },
        type: 'POST',
        dataType:'json',
        success:function(response) {
            if (response.status == '1') {
                showFamilyMembers();
                clearFields('#modal4');
                
                $('#modal4').modal('hide');
                $('#cmdDeleteFamily').prop('disabled',false);
            	$('#cmdDeleteFamily').removeClass('loader');
            } else if (response.status == '0') {
                if (response.message) {
                    alert(response.message);
                }
            } else {
                alert(response.message, 1);
            }
        }, error:function(xhr) {
        }
    });
}
