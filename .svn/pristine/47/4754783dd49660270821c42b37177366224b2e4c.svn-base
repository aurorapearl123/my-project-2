<script>
function updateRank(url, id)
{	

	console.log('update rank');
	$.post(url+'/update_rank', { id: id, rank: $('#ranking_'+id).val() },
	  function(data){
		  if(data==1) {
		  	$('#updated_'+id).show();
		  }
	  }, "text");
}
</script>
